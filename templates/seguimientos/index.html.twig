{% extends 'base.html.twig' %}

{% block title %}Hello {{ controller_name }}!{% endblock %}

{% block body %}
<div class="example-wrapper">
    {{ render(controller('App\\Controller\\SeguimientosController::anyadirSeguimiento', { 'id': proyecto.id })) }}
</div>
<div>
    {% for seguimiento in proyecto.seguimientos %}
        <div class="seguimiento">
            {{ seguimiento.situacion }}
            {{ render(controller('App\\Controller\\SeguimientosController::actualizarSeguimiento', { 'project': proyecto.id, 'seguimiento': seguimiento.id })) }}
        </div>
    {% endfor %}
</div>
{% endblock %}
